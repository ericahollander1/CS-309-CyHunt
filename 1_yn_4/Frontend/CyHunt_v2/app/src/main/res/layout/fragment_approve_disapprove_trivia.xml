<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.ApproveDisapproveTriviaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/da1field"
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="14dp"
            android:text="SomeQuestion"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/DecoyAnswer1"
            app:layout_constraintTop_toBottomOf="@+id/correctAnswerField" />

        <TextView
            android:id="@+id/da2field"
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="14dp"
            android:text="SomeQuestion"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/DecoyAnswer2"
            app:layout_constraintTop_toBottomOf="@+id/da1field" />

        <TextView
            android:id="@+id/da3field"
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="14dp"
            android:text="SomeQuestion"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/DecoyAnswer3"
            app:layout_constraintTop_toBottomOf="@+id/da2field" />

        <Button
            android:id="@+id/DisapproveTriviaBtn"
            style="@style/RejectionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="Reject Trivia."
            android:textColor="@color/yellow"
            app:layout_constraintStart_toEndOf="@+id/ApproveTriviaBtn"
            app:layout_constraintTop_toBottomOf="@+id/da3field" />

        <Button
            android:id="@+id/returnBtn"
            style="@style/NevermindStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Nevermind"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ApproveTriviaBtn" />

        <TextView
            android:id="@+id/newTriviaHint"
            android:layout_width="271dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:text="Evaluate this trivia question"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/questionBodyHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Trivia question:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/triviaQuestionField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/triviaQuestionField" />

        <TextView
            android:id="@+id/questionBodyHint2"
            android:layout_width="149dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="Correct Answer:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/correctAnswerField" />

        <TextView
            android:id="@+id/DecoyAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Decoy Answer 1:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/da1field" />

        <TextView
            android:id="@+id/DecoyAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Decoy Answer 2:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/da2field" />

        <TextView
            android:id="@+id/DecoyAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Decoy Answer 3:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/da3field" />

        <Button
            android:id="@+id/ApproveTriviaBtn"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Approve Trivia!"
            android:textColor="@color/yellow"
            app:layout_constraintBottom_toBottomOf="@+id/DisapproveTriviaBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/triviaQuestionField"
            android:layout_width="229dp"
            android:layout_height="197dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:text="SomeQuestion"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/questionBodyHint"
            app:layout_constraintTop_toBottomOf="@+id/newTriviaHint" />

        <TextView
            android:id="@+id/correctAnswerField"
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="SomeQuestion"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/questionBodyHint2"
            app:layout_constraintTop_toBottomOf="@+id/triviaQuestionField" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>